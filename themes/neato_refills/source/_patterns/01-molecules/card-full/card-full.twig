<div class="card">
  <div class="card-image">
    {% block image %}
      <img src="{{ img_src }}" alt="{{ img_alt }}">
    {% endblock %}
  </div>
  <div class="card-header">
    {% block header %}
      {{ header }}
    {% endblock %}
  </div>
  <div class="card-copy">
    {% block copy %}
      <p>{{ copy }}</p>
    {% endblock %}
  </div>
</div>